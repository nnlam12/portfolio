                    { title: "Projet de programmation AIge of EmpAIre", imgSrc: "/images/achievements/projet_python.png", description: "Développer une simulation simple du jeu AoE basée sur l'IA en Python et établir des instances de jeu multijoueur décentralisées en LAN à l'aide de sockets C.", link: "https://github.com/Maxeuh/AIge-of-EmpAIres", altLink: "Github"},
                    { title: "CTF InterINSA", imgSrc: "/images/achievements/ctf_InterINSA.png", description: "Représenter l'INSA CVL et participer au concours CTF en équipe contre les universités du groupe INSA." },
                    { title: "FCSC 2025", imgSrc: "/images/achievements/fcsc.jpg", description: "Terminer le concours national CTF France Cybersecurity Challenge (FCSC) au classement 109/2046.", link: "https://fcsc.fr/users/1049", altLink: "nnlamm@FCSC_2025" },
                    { title: "CTF TryHackMe", imgSrc: "/images/achievements/thm.png", description: "Apprendre activement et résoudre des Challenges CTF sur TryHackMe en dehors de l'école et des concours.", link: "https://tryhackme.com/p/nhatlamnguyen121", altLink: "nhatlamnguyen121@THM" },
